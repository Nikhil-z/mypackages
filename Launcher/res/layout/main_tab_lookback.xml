<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kkbutton="http://schemas.android.com/apk/res/com.konka.launcher"
    android:id="@+id/main_movie"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_100"
    android:scrollbars="none" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/button2_1"
                android:layout_width="@dimen/extra_button_width"
                android:layout_height="@dimen/extra_button_height"
                android:layout_marginLeft="@dimen/button_to_left"
                android:layout_marginTop="@dimen/button_to_headbar"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:tag="201"
                android:background="@drawable/default_2_1"
                 />
        </RelativeLayout>

        <!-- 焦点框 -->

        <ImageView
            android:id="@+id/movie_focus_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/focus"
            android:scaleType="fitXY"
            android:visibility="visible" />
    </FrameLayout>

</HorizontalScrollView>
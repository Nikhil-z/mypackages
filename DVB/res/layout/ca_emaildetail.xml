<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dip"
    android:layout_height="500dip"
    android:layout_gravity="center"
    android:background="@drawable/ca_email_content_bg"
    android:orientation="vertical" >

    <TextView
      android:id="@+id/emaildetail_title"
      android:layout_width="300dip"
      android:layout_height="wrap_content"
      android:text="@string/email_detial_title"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"
      android:textSize="30dip" />
    
	<TextView
        android:id="@+id/emaildetail_theme"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
      	android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/emaildetail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
      	android:layout_marginTop="10dp"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/emaildetail_level"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
      	android:layout_marginTop="10dp"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/emaildetail_content"
        android:layout_width="match_parent"
        android:layout_height="280dip"
        android:layout_marginLeft="20dp"
      	android:layout_marginTop="10dp" 
        android:textSize="20dip" />

</LinearLayout>
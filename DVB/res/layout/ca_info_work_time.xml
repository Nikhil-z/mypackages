<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical" >
 <FrameLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:layout_marginTop="5dp"
	android:gravity="center"
	> 
    
  	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        
        <ImageView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/ca_title_info"
    	/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ca_mg_title"
            android:textColor="#FFFFFF"
            android:textSize="30dp" 
            android:layout_marginTop="23dp"
            />
    </LinearLayout>
            
    <ImageView
        android:layout_width="wrap_content"
    	android:layout_height="25sp"
    	android:layout_marginTop="58dp"
    	android:background="@drawable/ca_title_top_line"
    	/>
  </FrameLayout>  
  
    <FrameLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:gravity="center"
        >
         <TextView 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/str_set_work_time_title"
	    	android:textColor="@color/enable_text_color"
		    android:textSize="30sp"
		    android:layout_marginTop="30dp"
		    android:layout_gravity="center_horizontal"
    	/>

   		 <ImageView
	        android:layout_width="400dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="50dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/under_top" />
        
    </FrameLayout>
     <!-- work time set start -->  

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginLeft="340dp"
        android:layout_height="450dp"
        android:orientation="vertical" >
   		 
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_ca_start_work_time"
                android:layout_width="203dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.00"
                android:gravity="left|center_vertical"
                android:text="@string/str_ca_start_work_time"
                android:textColor="#ffffff"
                android:textSize="19dp" />

            <!-- For start time(hour) -->

            <LinearLayout
                android:id="@+id/linearlayout_start_time_hour"
				android:layout_width="350dp"
				android:layout_height="100dp"
				android:layout_marginTop="12dp"
				android:background="@drawable/item_slector"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:orientation="horizontal" >

                <ImageView
                    style="@style/pic_mode_sty_leftarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>

                <TextView
                    android:id="@+id/textview_start_time_hour_text"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_work_time_hour_text"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textview_start_time_hour"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <ImageView
                    style="@style/pic_mode_sty_rightarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>
            </LinearLayout>

            <!-- For Start Time(minute) -->
            <LinearLayout
                android:id="@+id/linearlayout_start_time_minute"
				android:layout_width="350dp"
				android:layout_height="100dp"
				android:layout_marginTop="12dp"
				android:background="@drawable/item_slector"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:orientation="horizontal" >

                <ImageView
                    style="@style/pic_mode_sty_leftarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>

                <TextView
                    android:id="@+id/textview_start_time_minute_text"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_work_time_minute_text"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textview_start_time_minute"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <ImageView
                    style="@style/pic_mode_sty_rightarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/textview_ca_end_work_time"
                android:layout_width="203dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.00"
                android:gravity="left|center_vertical"
                android:text="@string/str_ca_end_work_time"
                android:textColor="#ffffff"
                android:textSize="19dp" />

            <!-- For End Time(hour) -->
            <LinearLayout
                android:id="@+id/linearlayout_end_time_hour"
				android:layout_width="350dp"
				android:layout_height="100dp"
				android:layout_marginTop="12dp"
				android:background="@drawable/item_slector"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:orientation="horizontal" >

                <ImageView
                    style="@style/pic_mode_sty_leftarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>

                <TextView
                    android:id="@+id/textview_end_time_hour_text"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_work_time_hour_text"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textview_end_time_hour"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <ImageView
                    style="@style/pic_mode_sty_rightarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>
            </LinearLayout>

            <!-- For End Time(minute) -->
            <LinearLayout
                android:id="@+id/linearlayout_end_time_minute"
				android:layout_width="350dp"
				android:layout_height="100dp"
				android:layout_marginTop="12dp"
				android:background="@drawable/item_slector"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:orientation="horizontal" >

                <ImageView
                    style="@style/pic_mode_sty_leftarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>

                <TextView
                    android:id="@+id/textview_end_time_minute_text"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_work_time_minute_text"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textview_end_time_minute"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="19dp" />

                <ImageView
                    style="@style/pic_mode_sty_rightarrow"
                    android:layout_marginTop="9dp" >
                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/textview_ca_work_time_pin"
                android:layout_width="204dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="@string/str_ca_work_time_pin"
                android:textColor="#ffffff"
                android:textSize="19dp" />

                <EditText
                    android:id="@+id/editText_ca_work_time_pin"
                    android:layout_width="208dp"
            		android:layout_height="30dp"
            		android:layout_marginLeft="20dp"
            		android:layout_weight="0.09"
                    android:gravity="left|center_vertical"
                    android:imeOptions="actionDone"
            		android:inputType="numberPassword"
            		android:password="true"
            		android:maxLength="6"
                    android:textColor="#ffffff"
                    android:textSize="10dp" >
                </EditText>

       		<Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/str_ca_mg_submit" />
        </LinearLayout>
    </ScrollView>

    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="@drawable/bottom"
    	android:baselineAlignBottom="true"
    	/>
    
        
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_ca_back_help"
            android:textSize="20sp" />
    </FrameLayout>
</LinearLayout>
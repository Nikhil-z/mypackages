<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical" >
 <FrameLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:layout_marginTop="5dp"
	android:gravity="center"
	> 
    
  	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        
        <ImageView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/ca_title_info"
    	/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ca_mg_title"
            android:textColor="#FFFFFF"
            android:textSize="30dp" 
            android:layout_marginTop="23dp"
            />
    </LinearLayout>
            
    <ImageView
        android:layout_width="wrap_content"
    	android:layout_height="25sp"
    	android:layout_marginTop="58dp"
    	android:background="@drawable/ca_title_top_line"
    	/>
  </FrameLayout>  
  
    <FrameLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:gravity="center"
        >
         <TextView 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/str_ca_info_pin_title"
	    	android:textColor="@color/enable_text_color"
		    android:textSize="30sp"
		    android:layout_marginTop="30dp"
		    android:layout_gravity="center_horizontal"
    	/>

   		 <ImageView
	        android:layout_width="400dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="50dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/under_top" />
        
    </FrameLayout>

   <!-- For CA Management PIN Modify Start-->
   
    <LinearLayout
        android:id="@+id/linearlayout_ca_mg_old_pin"
        android:layout_width="fill_parent"
        android:layout_marginLeft="340dp"
        android:layout_height="450dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_ca_mg_old_pin"
            android:layout_width="204dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.38"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_old_pin"
            android:textColor="#ffffff"
            android:textSize="19sp"/>  
        <EditText
            android:id="@+id/editText_ca_mg_old_pin"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.07"
            android:gravity="left|center_vertical"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:password="true"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textSize="9dp" >

        </EditText>

        <TextView
            android:id="@+id/textview_ca_mg_new_pin"
            android:layout_width="203dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.38"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_new_pin"
            android:textColor="#ffffff"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/editText_ca_mg_new_pin"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.09"
            android:gravity="left|center_vertical"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:password="true"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textSize="9dp" >

        </EditText>

        <TextView
            android:id="@+id/textview_ca_mg_new_pin2"
            android:layout_width="206dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.38"
            android:gravity="left|center_vertical"
            android:text="@string/str_ca_mg_new_pin2"
            android:textColor="#ffffff"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/editText_ca_mg_new_pin2"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.08"
            android:gravity="left|center_vertical"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:password="true"
            android:maxLength="6"
            android:numeric="integer"
            android:textColor="@color/black"
            android:textSize="9dp" >

        </EditText>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/str_ca_mg_submit" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="@drawable/bottom"
    	android:baselineAlignBottom="true"
    	/>
    
        
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_ca_back_help"
            android:textSize="20sp" />
    </FrameLayout>

</LinearLayout>